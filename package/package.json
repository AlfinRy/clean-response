{
  "name": "@leviosary/clean-response",
  "version": "1.1.0",
  "description": "A lightweight, type-safe TypeScript package for standardizing API responses in backend applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && npm run build && npm run test:run",
    "release:minor": "npm version minor && npm run build && npm run test:run",
    "release:major": "npm version major && npm run build && npm run test:run",
    "publish:patch": "npm run release:patch && git push origin main --follow-tags && npm publish",
    "publish:minor": "npm run release:minor && git push origin main --follow-tags && npm publish",
    "publish:major": "npm run release:major && git push origin main --follow-tags && npm publish"
  },
  "keywords": [
    "api",
    "response",
    "express",
    "fastify",
    "typescript",
    "backend",
    "rest",
    "api-response",
    "http-response",
    "nodejs",
    "type-safe",
    "lightweight",
    "clean",
    "standard",
    "pagination",
    "error-handling",
    "response-formatter"
  ],
  "author": {
    "name": "Leviosary"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leviosary/clean-response.git"
  },
  "homepage": "https://github.com/leviosary/clean-response#readme",
  "bugs": {
    "url": "https://github.com/leviosary/clean-response/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@types/node": "^20.11.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
